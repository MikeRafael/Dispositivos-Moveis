<Gerenciador>:
    Menu:
        name: 'menu'
    Atividades:
        name:"Atividades"
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Image:
            source: "Logo.jpeg"
            size_hint_y: None
            height: 200 # usa a resolução da imagem
            allow_stretch: True # Permite esticar a imagem
        Button:
            text: 'Atividades'
            on_release: app.root.current = 'Atividades'
        Button:
            text: 'Assistente'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Atividades>:
    #name: 'Atividades'
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Atividades'
                    on_release: app.root.current= 'menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()
                #ActionSeparator:
                #ActionButton:
                #    text:'Menu'
                #    on_release:app.root.current='menu'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y: None           # impede que os labels tenham tamanhos fixos
                height:self.minimum_height          # aumenta de forma automática
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id:tarefa
                font_size:30
                background_color:(.25, .25, 1, 1)
            Button:
                text:'+'
                size_hint_x: None
                width: 60
                on_release: root.addComponente()

<Funcoes>: # Pai
    size_hint_y: None
    heigth: 30
    Label: # Filho 1
        id:label
    Button: # Filho 2
        text:'X'
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('Atividades').ids.box.remove_widget(root)
