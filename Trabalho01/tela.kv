<GerenciarTelas>:
    TelaMenu:
        name: "menu"
    Tela1:
        name: "Tela1"
    Tela2:
        name: "Tela2"
<TelaMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Button:
            text: 'Tela1'
            on_release: app.root.current = 'Tela1'
        Button:
            text: 'Tela2'
            on_release: app.root.current = 'Tela2'
        Button:
            text: 'Sair'
            on_release: app.stop()
<Tela1>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Label:
            text: 'Atlético MG '
            id: lbl
        Image:
            source: "galo.jpg"
            size_hint_y: None
            height: 200 # usa a resolução da imagem
            allow_stretch: True # Permite esticar a imagem
        CheckBox:
            on_active: root.on_checkbox_Active(self, self.active)

<Tela2>:
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y: None           # impede que os labels tenham tamanhos fixos
                height:self.minimum_height          # aumenta de forma automática
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id:tarefa
                font_size:30
                background_color:(.25, .25, 1, 1)
            Button:
                text:'+'
                size_hint_x: None
                width: 60
                on_release: root.addComponente()

<Funcoes>: # Pai
    size_hint_y: None
    heigth: 30
    Label: # Filho 1
        id:label
    Button: # Filho 2
        text:'X'
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('Tela2').ids.box.remove_widget(root)
